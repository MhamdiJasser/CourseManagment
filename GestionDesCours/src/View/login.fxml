<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.UserController"
            prefWidth="400" prefHeight="500"
            styleClass="login-container"
            stylesheets="@login.css">

    <center>
        <VBox alignment="TOP_CENTER" spacing="40" styleClass="form-container">
            <padding>
                <Insets top="80" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Title -->
            <Label text="S'identifier" styleClass="title-label"/>

            <!-- NCIN Section -->
            <VBox alignment="CENTER_LEFT" spacing="8">
                <Label text="NCIN" styleClass="field-label"/>
                <TextField fx:id="ncinField" styleClass="input-field"
                           promptText="Entrez votre NCIN"/>
            </VBox>

            <!-- Password Section -->
            <VBox alignment="CENTER_LEFT" spacing="8">
                <Label text="Mot de passe" styleClass="field-label"/>
                <PasswordField fx:id="passwordField" styleClass="input-field"
                               promptText="Entrez votre mot de passe"/>
            </VBox>

            <!-- Login Button -->
            <Button text="Se Connecter" styleClass="login-button" onAction="#onLogin"/>
        </VBox>
    </center>
</BorderPane>
