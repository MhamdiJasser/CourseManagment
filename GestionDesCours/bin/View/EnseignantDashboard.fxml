<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0" styleClass="dashboard-container" stylesheets="@EnseignantDashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.EnseignantDashboardController">
   <children>
      <!-- Volet de Navigation Latéral (Side Menu) -->
      <VBox prefHeight="700.0" prefWidth="250.0" styleClass="sidebar">
         <children>
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="250.0" styleClass="logo-label" text="Espace Enseignant">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <VBox spacing="10.0">
               <children>
                  <Button fx:id="btnHome" mnemonicParsing="false" onAction="#handleHome" prefHeight="40.0" prefWidth="250.0" styleClass="sidebar-button" text="Accueil" />
                  <Button fx:id="btnCourseTypes" mnemonicParsing="false" onAction="#handleCourseTypes" prefHeight="40.0" prefWidth="250.0" styleClass="sidebar-button" text="Gérer les Types de Cours" />
                  <Button fx:id="btnAddCourse" mnemonicParsing="false" onAction="#handleAddCourse" prefHeight="40.0" prefWidth="250.0" styleClass="sidebar-button" text="Ajouter un Cours" />
                  <Button fx:id="btnViewCourses" mnemonicParsing="false" onAction="#handleViewCourses" prefHeight="40.0" prefWidth="250.0" styleClass="sidebar-button" text="Mes Cours &amp; Remises" />
               </children>
               <padding>
                  <Insets left="15.0" right="15.0" />
               </padding>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="lblUserInfo" alignment="CENTER" prefWidth="250.0" text="Bienvenue, [NCIN]" textFill="#a5a5a5">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="250.0" styleClass="sidebar-button-logout" text="Déconnexion">
                     <VBox.margin>
                        <Insets bottom="20.0" left="15.0" right="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
      
      <!-- Zone de Contenu Principale -->
      <StackPane fx:id="contentArea" HBox.hgrow="ALWAYS">
         <children>
            <Label style="-fx-font-size: 24px;" text="Sélectionnez une option dans le menu de gauche" textFill="#949494" />
         </children>
      </StackPane>
   </children>
</HBox>