<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="660.0" prefWidth="950.0" spacing="20.0" styleClass="card" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ManageCourseTypesController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="header-title" text="Gestion des Types de Cours" />
      
      <!-- Formulaire d'Ajout / Modification -->
      <VBox spacing="10.0" style="-fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
         <children>
            <Label text="Ajouter ou Modifier un Type de Cours" style="-fx-font-weight: bold;" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Nom du Type (ex: TP, CM):" minWidth="150.0" />
                  <TextField fx:id="nameField" prefWidth="250.0" promptText="Nom du type" styleClass="text-field" />
                  <CheckBox fx:id="requiresSubmissionCheckbox" text="Nécessite une remise (deadline)" />
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSave" prefWidth="120.0" styleClass="primary-button" text="Enregistrer" />
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleClearSelection" prefWidth="120.0" text="Annuler/Nouveau" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Tableau des Types de Cours Existants -->
      <TableView fx:id="courseTypeTable" prefHeight="400.0" prefWidth="910.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="colName" prefWidth="300.0" text="Nom du Type" />
          <TableColumn fx:id="colRequiresSubmission" prefWidth="300.0" text="Nécessite Remise" />
          <TableColumn fx:id="colActions" prefWidth="230.0" text="Actions" />
        </columns>
      </TableView>
   </children>
</VBox>